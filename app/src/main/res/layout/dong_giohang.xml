<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">
    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_margin="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:id="@+id/imageviewgiohang"
            android:adjustViewBounds="true"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:layout_margin="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewtengiohang"
            android:textSize="25dp"
            android:text="Tên món hàng"
            android:textColor="@color/black"/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewgiagiohang"
            android:textSize="25dp"
            android:text="Giá món hàng"
            android:textColor="#E81A1A"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:focusable="false"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonminnus"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#DDDCDC"/>
            <Button
                android:focusable="false"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonvalues"
                android:layout_marginTop="5dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:backgroundTint="@color/white"/>
            <Button
                android:focusable="false"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonplus"
                android:layout_marginTop="5dp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:backgroundTint="#DDDCDC"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>