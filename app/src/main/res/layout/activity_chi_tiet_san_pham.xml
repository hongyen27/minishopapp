<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietSanPham"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarchitietsanpham"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Chi tiết sản phẩm"
        android:background="#2196F3"
        app:titleTextColor="@color/white">
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:id="@+id/imageviewchitietsp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Tên sản phẩm"
                android:id="@+id/textviewtenchitietp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:textColor="#E81313"
                android:text="Giá sản phẩm"
                android:id="@+id/textviewgiachitietp"/>
            <Spinner
                android:layout_gravity="center"
                android:padding="15dp"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/spinner"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Thêm giỏ hàng"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#D5D1D1"
                android:id="@+id/buttondatmua"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#FDEEE9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả sản phẩm"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            android:textColor="#4CAF50"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textviewmotachitietsp"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:paddingBottom="10dp"/>
        </ScrollView>
    </LinearLayout>

</LinearLayout>